{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "endcat",
  "version": "0.3.0",
  "identifier": "org.boxcat.endcat",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:14200",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "endcat",
        "width": 1175,
        "height": 875,
        "minWidth": 675,
        "minHeight": 475,
        "decorations": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": []
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "dmg",
      "deb",
      "rpm",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "files": {
        "Resources/Assets.car": "icons/Assets.car"
      }
    }
  }
}
