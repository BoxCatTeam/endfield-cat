{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "hg-auth"],
  "remote": {
    "urls": [
      "https://*.hypergryph.com/*",
      "https://*.hycdn.cn/*",
      "https://*.skland.com/*",
      "https://user.hypergryph.com/*",
      "https://web-api.hypergryph.com/*",
      "https://as.hypergryph.com/*",
      "https://binding-api-account-prod.hypergryph.com/*",
      "https://web.hycdn.cn/*",
      "https://ak.hypergryph.com/*",
      "https://u8.hypergryph.com/*",
      "https://react.dev/*",
      "https://*/*"
    ]
  },
  "permissions": [
    "core:default",
    "core:webview:default",
    "core:webview:allow-create-webview",
    "core:webview:allow-create-webview-window",
    "core:window:allow-start-dragging",
    "core:window:allow-minimize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-close",
    "core:webview:allow-webview-close",
    "core:webview:allow-webview-hide",
    "core:webview:allow-set-webview-focus",
    "core:webview:allow-set-webview-position",
    "core:webview:allow-set-webview-size",
    "core:webview:allow-set-webview-zoom",
    "core:webview:allow-internal-toggle-devtools",
    "core:window:allow-set-size",
    "core:window:allow-set-position",
    "core:window:allow-inner-size",
    "core:window:allow-outer-position",
    "core:window:allow-is-maximized",
    "core:window:allow-maximize",
    "core:window:allow-set-min-size",
    "core:window:allow-current-monitor",
    "core:window:allow-primary-monitor",
    "sql:default",
    "sql:allow-execute",
    "opener:default"
  ]
}
